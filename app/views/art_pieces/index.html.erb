<div class="banner flex-column center">
  <div class="flex-column">
    <h1 class="white text-center">All art pieces</h1>
  </div>
</div>

<ul class="container cards">
  <% @pieces.each do |piece| %>
    <li>
      <div class="card-category card">
        <h4 class="text-center"><%= link_to piece.title, piece_path(piece) %></h4>
        <div class="row d-flex">
        </div>
      </div>
    </li>
  <% end %>
</ul>

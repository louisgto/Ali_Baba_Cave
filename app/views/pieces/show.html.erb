<div class="flex-column">
  <h1 class="white text-center mt-3"><%= @piece.title %></h1>
</div>

<div class="container d-flex">
  <div class="col-6">
    <h4><%= @piece.artist %></h4>
    <h5><%= @piece.year %></h5>
    <p><%= @piece.description %></p>
    <p><strong><%= @piece.price %> â‚¬</strong></p>
    <div class="d-flex mt-4">
      <%= link_to "Back to art pieces", pieces_path, class: "btn btn-dark"%>
      <% if policy(@piece).destroy? %>
        <%= link_to "Edit", edit_piece_path(@piece), class: "btn btn-secondary ml-2" %>
        <%= link_to "Delete offer", piece_path(@piece), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger ml-2" %>
      <% end %>
</div>
  </div>
  <div class="col-6">
    <%= cl_image_tag @piece.photo, height: 300, width: 400, crop: :fill %>
  </div>
</div>


